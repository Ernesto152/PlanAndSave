<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="default" extends="struts-default">
        <action name="person" class="pe.edu.utp.planandsave.actions.PersonAction">
            <result name="success">welcome.jsp</result>
            <result name="input">pruebastruts.jsp</result>
        </action>


        <action name="*ExpenseCategory" class="pe.edu.utp.planandsave.actions.ExpensesCategoryAction" method="{1}">
            <result name="success">pruebaExpenseCategories.jsp</result>
            <result name="input">error.jsp</result>
        </action>

        <action name="*Income" class="pe.edu.utp.planandsave.actions.IncomeAction" method="{1}">
            <result name="success">formIncome.jsp</result>
            <result name="input">formIncome.jsp</result>
        </action>

        <action name="*User" class="pe.edu.utp.planandsave.actions.UserAction" method="{1}">
            <result name="success">signup.jsp</result>
            <result name="input">signup.jsp</result>
        </action>

        <action name="*Expense" class="pe.edu.utp.planandsave.actions.ExpenseAction" method="{1}">
            <result name="success">formExpense.jsp</result>
            <result name="input">formExpense.jsp</result>
        </action>
    </package>
</struts>